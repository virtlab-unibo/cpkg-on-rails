<div class="package-panel">
  <div class="panel-heading">
    <h1><%= @package %></h1>
      <dl class="dl-horizontal">
      <dt><%= t(:description) %></dt><dd><%= @package.get_description %></dd>
      <dt><%= t(:course_name) %></dt><dd><%= link_to @course, guest_course_path(@course.id) %></dd>
    </dl>
  </div>

  <div class="panel-body">
    <h2><%= t(:course_materials) %></h2>
    <% if @package.documents.empty? %>
      <p><i><%= t(:package_without_materials) %></i></p>
    <% else %>
      <p><%= icon('info-circle')%><%= t(:materials_included_into_deb) %></p>
      <ul>
        <% @package.documents.each do |document| %>
          <li><%= link_to document.name, document.attach.url, title: "Scarica file" %></li>
        <% end %>
      </ul>
    <% end %>

    <h2>Software:</h2>
    <% if @package.depends_on.empty? %> 
      <p><i><%= t(:package_without_dependecies) %></i></p>
    <% else %>
      <p><%= icon('info-circle')%><%= t(:sw_included_into_deb) %></p>
      <ul>
        <% @package.depends_on.each do |package| %>  
          <li><strong><%= package.name %></strong> (<em><%= package.get_description %></em>)</li>
        <% end %>
      </ul>
    <% end %>

    <% if @other_packages.any? %>
      <h2><%= t(:other_package_list) %>:</h2>
      <ul>
        <% @other_packages.each do |package| %>  
          <li><%= link_to package, package_path(package) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <% if can? :update, @package %>
    <div class="panel-footer">
      <%= link_to icon('pencil') + ' edit', edit_package_path(@package), class: :button %>
    </div>
  <% end %>
</div>

