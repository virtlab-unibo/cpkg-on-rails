<div class="alert alert-info">
  <p><%= big_icon('info-circle') %><%= t(:add_dep_guide_html) %></p>
</div>

<%= form_tag depend_package_path(@package), method: :put do %>
  <label style="display: inline"><%= t(:new_dep) %></label>
  <input name="depend" type="text" data-searchpath="<%= search_packages_path %>" id="typeahead" style="display: inline">
  <%= submit_tag t(:add) %>
<% end %>

<table class="table table-striped table-condensed">
  <tbody>
    <% @package.depends_on.each do |package| %>
      <tr>
        <th><%= package.name %></th>
        <td><em><%= package.get_description %></em></td>
        <td><%= package.version %></td>
        <td><%= link_to_delete undepend_package_path(@package, depend: package.name) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


