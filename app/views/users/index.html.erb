<%= dm_card title: t(:users_admin) do %>  
  <table class="table table-striped table-sm">
    <tr>
      <th>Id</th>
      <th><%= t(:user) %></th>
      <th>Email</th>
      <th><%= t(:course) %></th>
      <th>Admin</th>
      <th>actions</th>
    </tr>
    <% @users.each do |user| %>  
      <tr>
        <%= content_tag(:td, user.id) %>
        <%= content_tag(:td, link_to(user, user_path(user))) %>
        <%= content_tag(:td, user.email) %>
        <%= content_tag(:td, user.courses.count) %>
        <%= content_tag(:td, user.admin ? icon('asterisk') : '') %>
        <td>
          <% unless current_user == user %>  
            <%= link_to icon('user'), impersonate_path(id: user.id) %>
            <%= link_to_delete(user_path(user)) %>
          <% end %>
        </td>
      </tr>  
    <% end %>
  </table>

  <p>
  <%= link_to t(:new_user), new_admin_invitation_path, class: :button %> -
  <%= link_to t(:invitation_list), admin_invitations_path %>
  </p>
<% end %>
