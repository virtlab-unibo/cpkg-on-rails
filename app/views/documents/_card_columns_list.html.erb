<div class="card-columns" id="documents_list" style="column-count: 4">
  <% documents.each do |document| %>  
    <div class="card text-center">
      <div class="card-body">
        <%= link_to  document.attach.url, target: '_new' do %>  
          <div class="card-title">
            <%= icon('file', size: 80) %>
          </div>
        <% end %>
        <p class="card-text">
          <%= document.name %>
          <span class="float-right"><%= link_to_delete document_path(document) %></span>
        </p>
      </div>
    </div>
  <% end %>
</div>

