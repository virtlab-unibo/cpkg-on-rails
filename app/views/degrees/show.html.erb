<div class="row">
<div class="col-md-4 guide">
  <%= render 'helps/student_guide' %>
</div>
<div class="col-md-6">
  <h1><%= @degree %></h1>

  <% if @courses.any? %>  
    <ul class="all_clickable">
      <% @courses.each do |course| %>  
        <li><%= link_to course, course %></li>
      <% end %>
    </ul>
  <% else %>
    <p class="alert alert-warning"><%= t :no_packages %></p>
  <% end %>

  <% if user_admin? %>  
    <%= link_to_edit   'Edit', edit_degree_path(@degree), button: true %>
  <% end %>
</div>
</div>
