<h1><%= t :degrees %> <small><%= t :partecipating %></small></h1>

<div class="list-group mb-3 mt-3 font-weight-bold">
  <% @degrees.each do |degree| %>  
    <%= link_to degree_path(degree), class: "list-group-item list-group-item-action" do %>
      <span class="btn btn-info btn-sm"><%= degree.code %></span> - <%= degree.name %>
    <% end %>
  <% end %>
</div>

<% if user_admin?  %>  
  <p><%= link_to_new t(:new_degree), new_degree_path %></p>
<% end %>
